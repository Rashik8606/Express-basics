<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="stylesheets/style.css" />
    <script src="/public/javascripts/style.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <title>Home page</title>
  </head>
  <body>

    <section>
      <div class="wrapper">

        <h2><strong>Movies Category<span>( 4 )</span></strong></h2>

        <div class="cards">

          <figure class="card">

            <img src="https://i.ibb.co/dpDJZ2b/1.jpg" />

            <figcaption>Dota 2</figcaption>

          </figure>

          <figure class="card">

            <img src="https://i.ibb.co/X7nQxgj/2.jpg" />

            <figcaption>Stick Fight</figcaption>

          </figure>

          <figure class="card">

            <img src="https://i.ibb.co/FqTvB96/3.jpg" />

            <figcaption>Minion Masters</figcaption>

          </figure>

          <figure class="card">

            <img src="https://i.ibb.co/4P0CDKX/4.jpg" />

            <figcaption>KoseBoz!</figcaption>

          </figure>

        </div>

        <h2><strong>What's new?</strong></h2>

        <div class="news">
          {{#each movies}}
            <figure class="article">

              <img
                src="https://image.tmdb.org/t/p/w500{{this.poster_path}}"
                alt="{{this.title}}"
              />

              <figcaption>

                <h3>{{this.title}}</h3>
                <small style="color:darkgrey;">{{this.genre_ids}}</small>
                <p>

                  {{this.overview}}

                </p>

              </figcaption>

            </figure>

          {{/each}}
        </div>

      </div>
    </section>

 <div class="pagination">
    {{#if (gt currentPage 1)}}
        <a href="/?page=1" class="btn first">« First</a>
        <a href="/?page={{sub currentPage 1}}" class="btn prev">‹ Prev</a>
    {{else}}
        <span class="btn disabled">« First</span>
        <span class="btn disabled">‹ Prev</span>
    {{/if}}

    {{#each (range (sub currentPage 2) (add currentPage 2))}}
        {{#if (and (gt this 0) (lte this ../totalPages))}}
            <a href="/?page={{this}}" class="btn {{#if (eq this ../currentPage)}} active{{/if}}">{{this}}</a>
        {{/if}}
    {{/each}}

    {{#if (lt currentPage totalPages)}}
        <a href="/?page={{add currentPage 1}}" class="btn next">Next ›</a>
        <a href="/?page={{totalPages}}" class="btn last">Last »</a>
    {{else}}
        <span class="btn disabled">Next ›</span>
        <span class="btn disabled">Last »</span>
    {{/if}}
</div>



<style>
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin: 30px 0;
    padding: 10px;
}

.pagination .btn {
    display: inline-block;
    padding: 12px 18px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    color: #fff;
    background: linear-gradient(135deg, #1e3c72, #2a5298);
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    border: 2px solid transparent; /* Prevents resizing */
    cursor: pointer;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
    box-sizing: border-box; /* Prevents size changes */
}

.pagination .btn:hover {
    background: linear-gradient(135deg, #2a5298, #1e3c72);
    transform: none !important; /* Prevents enlargement */
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
}

.pagination .btn:active,
.pagination .btn:focus {
    transform: none !important;
    scale: 1 !important;
    box-shadow: none !important;
    outline: none !important;
    border: none !important;
}

.pagination .active {
    font-weight: bold;
    pointer-events: none;
    transform: none !important;
    scale: 1 !important;
    width: auto !important;  /* Prevent extra width */
    height: auto !important; /* Prevent extra height */
    display: inline-flex; /* Ensures content stays centered */
    align-items: center;
    justify-content: center;
    padding: 12px 18px; /* Keep padding consistent */
    box-sizing: border-box; /* Prevents unwanted size increase */

}

/* Disabled Buttons */
.pagination .disabled {
    background: #bbb;
    color: #666;
    pointer-events: none;
    cursor: default;
}

/* First & Last Buttons */
.pagination .first, .pagination .last {
    background: linear-gradient(135deg, #1e88e5, #1976d2);
}

.pagination .first:hover, .pagination .last:hover {
    background: linear-gradient(135deg, #1976d2, #1e88e5);
}

/* Previous & Next Buttons */
.pagination .prev, .pagination .next {
    background: linear-gradient(135deg, #ff9800, #e65100);
}

.pagination .prev:hover, .pagination .next:hover {
    background: linear-gradient(135deg, #e65100, #ff9800);
}

/* Responsive Design */
@media (max-width: 600px) {
    .pagination {
        flex-wrap: wrap;
        gap: 6px;
    }
    
    .pagination .btn {
        padding: 10px 14px;
        font-size: 14px;
    }
}



</style>


