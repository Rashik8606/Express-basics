<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Creation</title>
</head>
<body>
      <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
    }

    body {
      background: #f5f5f5;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .container {
      display: flex;
      gap: 30px;
      padding: 40px;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.1);
      max-width: 900px;
      width: 100%;
    }

    .submit-form {
      flex: 1;
      padding: 20px;
    }
    .login-form {
      flex: 1;
      padding: 20px;
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
    }

    .submit-label {
      display: block;
      margin-bottom: 18px;
      color: #555;
      font-weight: 500;
    }

    .submit-input {
      width: 100%;
      padding: 12px 14px;
      margin-top: 6px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
      transition: border-color 0.3s ease;
    }

    .submit-input:focus {
      outline: none;
      border-color: #4f46e5;
    }

    .stn-btn {
      width: 100%;
      padding: 12px;
      background-color: #4f46e5;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
      margin-top: 10px;
    }

    .stn-btn:hover {
      background-color: #3730a3;
    }

    /* Optional: Add a vertical divider */
    .divider {
      width: 2px;
      background: #ddd;
    }

    @media(max-width: 768px) {
      .container {
        flex-direction: column;
      }
      .divider {
        display: none;
      }
    }
  </style>
</head>
<body>

<div class="container">
  <!-- Sign Up Section -->
  <form class="submit-form" action="/users/submit" method="post" enctype="multipart/form-data">
    <h2>Create New Account</h2>
    <label class="submit-label">Profile Picture
      <input class="submit-input" type="file" name="profilepicture" accept="image/*" />
    </label>
    <label class="submit-label">User Name
      <input class="submit-input" type="text" name="username" />
    </label>
    <label class="submit-label">Phone Number
      <input class="submit-input" type="text" name="phonenumber" />
    </label>
    <label class="submit-label">Email Address
      <input class="submit-input" type="text" name="email" />
    </label>
    <label class="submit-label">Password
      <input class="submit-input" type="password" name="password" />
    </label>
    <button class="stn-btn" type="submit">Sign Up</button>
  </form>

  <!-- Vertical Divider -->
  <div class="divider"></div>

  <!-- Login Section -->
  <form class="login-form" action="/users/login" method="post">
    <h2>Log In</h2>
    <label class="submit-label">Email Address
      <input class="submit-input" type="text" name="email" />
    </label>
    <label class="submit-label">Password
      <input class="submit-input" type="password" name="password" />
    </label>
    <button class="stn-btn" type="submit">Log In</button>
  </form>
</div>



</body>
</html>